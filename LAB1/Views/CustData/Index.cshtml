@model IEnumerable<LAB1.Models.客戶資料>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm("Index", "CustData", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <p>
        客戶名稱:
        @Html.TextBox("Keyword")
        <input type="submit" value="Query" class="btn btn-default" />
        @Html.ActionLink("Download Excel", "Download")
    </p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("客戶名稱", "Index", new { keyword = "", 欄位 = "客戶名稱", sort = ViewBag.sort })
           
        </th>
        <th>
            @Html.ActionLink("統一編號", "Index", new { keyword = "", 欄位 = "統一編號", sort = ViewBag.sort })
      
        </th>
        <th>
            @Html.ActionLink("電話", "Index", new { keyword = "", 欄位 = "電話", sort = ViewBag.sort })


         
        </th>
        <th>
            @Html.ActionLink("傳真", "Index", new { keyword = "", 欄位 = "傳真", sort = ViewBag.sort })
     
        </th>
        <th>
            @Html.ActionLink("地址", "Index", new { keyword = "", 欄位 = "地址", sort = ViewBag.sort })
        </th>
        <th>
            @Html.ActionLink("Email", "Index", new { keyword = "", 欄位 = "Email", sort = ViewBag.sort })

        </th>
        <th>
            @Html.ActionLink("客戶分類", "Index", new { keyword = "", 欄位 = "客戶分類", sort = ViewBag.sort })

        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.客戶名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.統一編號)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.電話)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.傳真)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.地址)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.客戶分類)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
}
